{% if collection.image %}
  {%- assign collection_image = collection.image -%}
{% elsif collection.products.first and collection.products.first.images != empty %}
  {%- assign collection_image = collection.products.first.featured_image -%}
{% else %}
  {% assign collection_image = blank %}
{% endif %}

<div class="collection-grid-item">
  <div class="collection-col-custome">
  <a href="{{ collection.url }}" class="collection-grid-item__link">
    <div class="collection-grid-item__title-wrapper">
      <img src="{{ collection_image | img_url: '300x320' }}">
      {% comment %}
      <h3 class="collection-grid-item__title">
        <span class="col-mide-custom {% if template != 'index' %} col-btn {% endif %}">
        {% if collection.title == blank %}
          {{ 'homepage.onboarding.collection_title' | t }}
        {% else %}
          {{ collection.title }}
        {% endif %}
        </span>
      </h3>
      {% endcomment %}
    </div>
    {% comment %}
    <div class="col-button"><span>{{ block.settings.button }} <i class="fa fa-long-arrow-right" aria-hidden="true"></i> </span></div>  {% endcomment %}
  </a>

  </div>
</div>

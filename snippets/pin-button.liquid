<a class='pin_custom' target='_blank' href="//pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&amp;media=http:{{ block.settings.image | img_url:'large' }}&amp;description={{ product.title | strip_html | truncate: 200, '' | url_param_escape }}{% for tag in product.tags limit: 3 %}{{ tag | replace: ' ', '-' | prepend: ' #' | url_param_escape }}{% endfor %}" data-pin-do="buttonPin" data-pin-config="none">
  <img src="{{ 'pin_it.png' | asset_url}}" />
</a>
{% comment %}
<script async src="//assets.pinterest.com/js/pinit.js"></script>
{% endcomment %}
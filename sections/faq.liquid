<div class="page-width">
  <div class="faq-grid">
    <div class="grid grid--uniform">
      <div class="grid__item one-third small--one-whole">
        {% if section.settings.title != blank %}
            <h2>{{ section.settings.title | escape }}</h2>
        {% endif %}
        {% if section.settings.text != blank %}
            <div class="faq_h_text">{{ section.settings.text }}</div>
        {% endif %}
      </div>
      <div class="grid__item two-thirds  small--one-whole">
        {% for block in section.blocks %}
          <div class="faq_box">
            <h4 class="faq_heading">{{ block.settings.title }} <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon--wide icon-chevron-down" viewBox="0 0 498.98 284.49"><path class="cls-1" d="M80.93 271.76A35 35 0 0 1 140.68 247l189.74 189.75L520.16 247a35 35 0 1 1 49.5 49.5L355.17 511a35 35 0 0 1-49.5 0L91.18 296.5a34.89 34.89 0 0 1-10.25-24.74z" transform="translate(-80.93 -236.76)"></path></svg></h4>
            <div class="faq_text">
              {{ block.settings.text }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "FAQs",
    "class": "index-section faq_section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "FAQs"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      }
    ],
    "blocks": [
      {
        "type": "faq",
        "name": "FAQ",
        "settings": [
          {
            "label": "Heading",
            "id": "title",
            "type": "text"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "FAQs"
      }
    ]
  }
{% endschema %}